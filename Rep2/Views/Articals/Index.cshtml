
@model  Rep2.Models.EntityModel.Publication

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout/_MainMaster.cshtml";
}



<h3>Articals for @Model.PublicationName</h3>

<div class="card">

    <div class="card-header">
        @Html.ActionLink("Create New", "Create", new { id = Model.PublicationID }, new { @class = "btn btn-secondary" })
    </div>


    <div class="card-body">


        <table class="table table-striped table-bordered datatable col-md-12" cellspacing="0">
            <thead>
                <tr>
                    <td>#</td>
                    <td>Name</td>
                    <td>Filters</td>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Articals)
                {
                    <tr>
                        <td>@item.ArticallD</td>
                        <td>@item.ArticalName</td>
                        <td>@item.Fillters</td>
                        <td>

                            @Html.ActionLink("Edit", "Edit", new { id = item.ArticallD }) |
                            <a href="@Url.Action("Articals","index",new { id = item.ArticallD })">Articals</a>|


                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>

