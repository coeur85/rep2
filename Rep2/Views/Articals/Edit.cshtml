@model Rep2.Models.EntityModel.Artical
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout/_MainMaster.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="card">
        <div class="card-body">


            @Html.HiddenFor(x => x.PublicationID)
            @Html.HiddenFor(x => x.ArticallD)

            <div class="form-group">
                @Html.LabelFor(model => model.ArticalName, "Artical Name", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.ArticalName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Fillters, "Fillters", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextAreaFor(model => model.Fillters,  new { @class = "form-control" }  )

            </div>

        </div>

        <div class="card-footer">
            <div class="row">

                <div class="col-md-offset-2 col-md-2">
                    @Html.ActionLink("Back", "Index", new { id = Model.PublicationID }, new { @class = "btn btn-danger" })
                </div>
                <div class="col-md-offset-2 col-md-2">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>




}


