@model Rep2.Models.EntityModel.Publication

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout/_MainMaster.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="card">
        <div class="card-body">


            @Html.HiddenFor(x=> x.PublicationID)

            <div class="form-group">
                @Html.LabelFor(model => model.PublicationName, "Publication Name", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.PublicationName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.BranchTypeID, "Publication Server Type", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("BranchTypeID", null, htmlAttributes: new { @class = "form-control", @required = "required" })
            </div>

        </div>

        <div class="card-footer">
            <div class="row">

                <div class="col-md-offset-2 col-md-2">
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-danger" })
                </div>
                <div class="col-md-offset-2 col-md-2">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>




}
