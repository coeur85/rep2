
@model IEnumerable<Rep2.Models.EntityModel.Publication>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout/_MainMaster.cshtml";
}




<h2>All Publications</h2>



<div class="card">

    <div class="card-header">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary" })
    </div>


    <div class="card-body">
        <table class="table table-striped table-bordered datatable" cellspacing="0" >
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Publisher Server Branch</th>
                    <th>Articals</th>
                    <th>Distributers</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PublicationID</td>
                        <td>@item.PublicationName</td>
                        <td>@item.BranchType.TypeName</td>
                        <td>@item.Articals.Count</td>
                        <td>@item.Distributers.Count</td>
                        <td>
                            
                            @Html.ActionLink("Edit Publication", "Edit", new { id = item.PublicationID }) |
                            <a href="@Url.Action("index","Articals",new { id = item.PublicationID })">Articals</a>|
                           
                            <a href="@Url.Action("index","Distributers",new { id = item.PublicationID })">Distributers</a>
                            
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>