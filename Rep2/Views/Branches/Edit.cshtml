@model Rep2.Models.EntityModel.Branch

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout/_MainMaster.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x=> x.BranchID)
    <div class="card">


        <div class="card-body">
            <h4>@Model.BranchName</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.BranchName, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.BranchName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TypeID, "Type", htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.DropDownList("TypeID", null, htmlAttributes: new { @class = "form-control", @required = "required" })


            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.Code, "Code", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @required = "required", @number = "number" } })

            </div>

        </div>

        <div class="card-footer">
            <div class="row">

                <div class="col-md-offset-2 col-md-2">
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-danger" })
                </div>
                <div class="col-md-offset-2 col-md-2">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>

        </div>
    </div>


}

