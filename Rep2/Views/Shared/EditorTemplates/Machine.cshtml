
@model Rep2.Models.EntityModel.Machine


@Html.HiddenFor(model => model.MachineID)




@if (ViewBag.formMode == "create" || ViewBag.formMode == "edit")
{

    <div class="form-group">
        @Html.LabelFor(model => model.MachineName, "Machine Name", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.MachineName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MachineIP, "IP Address", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.MachineIP, new { htmlAttributes = new { @class = "form-control", @required = "required" } })

    </div>



}

else
{


    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.MachineName, "Machine Name", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.EditorFor(model => model.MachineName, new { htmlAttributes = new { @class = "form-control", @readOnly = "readOnly" } })

            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.MachineIP, "IP Address", htmlAttributes: new { @class = "control-label col-md-12" })
                @Html.EditorFor(model => model.MachineIP, new { htmlAttributes = new { @class = "form-control", @readOnly = "readOnly" } })

            </div>
        </div>
    </div>
    
    


}


